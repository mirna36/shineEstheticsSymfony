{% extends 'base.html.twig' %}
{% block body %}

    {% block header %}
        {{ parent() }}
    {% endblock %}
    <div class="titre">
        {{ titre }}
    </div>

    {% block section %}

        <div class="row featurette">
            <div class="col-md-5">
                <div class="fleches">

                    <!-- Full-width images with number text -->
                    <div class="mySlides">
                        <div class="numbertext"></div>
                        <img src="{{ asset('images/products/') }}{{ produit.nomPhoto }}" style="width:400px">
                    </div>

                    {% for pj in produit.pieceJointes %}
                        <div class="mySlides">
                            <div class="numbertext"></div>
                            <img src="{{ asset('images/products/') }}{{ pj.imageName }}" style="width:400px">
                        </div>
                    {% endfor %}


                    <!-- Next and previous buttons -->
                    <a class="prev" onclick="plusSlides(-1)" style="color: #1b1e21">&#10094;</a>
                    <a class="next" onclick="plusSlides(1)" style="color: #1b1e21">&#10095;</a>

                    <!-- Thumbnail images -->
                    <div class="row">
                        <div class="column">
                            <div class="row">
                                <img class="demo cursor" src="{{ asset('images/products/') }}{{ produit.nomPhoto }}"
                                     style="width:100%"
                                     onclick="currentSlide(1)" alt="">
                            </div>
                        </div>
                        {% for pj in produit.pieceJointes %}
                            <div class="column">
                                <div class="row">

                                    <img class="demo cursor" src="{{ asset('images/products/') }}{{ pj.imageName }}"
                                         style="width:100%"
                                         onclick="currentSlide(2)" alt="">
                                </div>
                            </div>
                        {% endfor %}

                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <h2>Description</h2>
                <br>
                <h2 class="display-5">{{ produit.libelle }}</h2>
                <p class="lead">{{ produit.prixUnit }}â‚¬</p>
                <br>
                <div class="text-center">
                    {{ produit.description | raw }}
                </div>
                <br>
                <div class="text-center">
                    <a class="btn btn-danger " href="{{ path('ajouter',{id:produit.id}) }}">Devis</a>
                </div>
                <br>
                <div class="text-center">
                    <a class="btn btn-danger btn-sm" href="{{ path('/maquillage') }}">Retour page produit</a>
                </div>
            </div>
        </div>



    {% endblock %}


    {% block footer %}
        {{ parent() }}
    {% endblock %}

    {% block javascripts %}
        {{ parent() }}
    {% endblock %}
{% endblock %}

