{% extends 'base.html.twig' %}
{% block body %}

    {% block header %}
        {{ parent() }}
    {% endblock %}
    <div class="titre">
        {{ titre }}
    </div>
    {% block section %}

        <div class="container">
            <div class="container mt-4">

                <div class="col-md-10 text-center">
                    <div class="row">
                        {% for sousCategories in produits %}
                            <div class="col-md-4 boxProduit">
                                <img src="{{ asset('images/products/') }}{{ sousCategories.nomPhoto }}"
                                     class="img-product "
                                     alt="{{ sousCategories.nomPhoto }}"><br>
                                <h3>{{ sousCategories.libelle }}</h3>

                                <a class="btn btn-danger btn"
                                   href="{{ path('produitMaquillage',{id:sousCategories.id,slug:sousCategories.slug}) }}">Detail</a>

                            </div>

                        {% endfor %}
                        <br><br><br><br>
                    </div>
                </div>
            </div>
        </div>
        </div>

    {% endblock %}

    {% block footer %}
        {{ parent() }}
    {% endblock %}
    {% block javascripts %}
        {{ parent() }}
    {% endblock %}
{% endblock %}